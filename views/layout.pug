doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        link(rel="stylesheet", href="/style/style.css")
        title #{title}
    body 
    nav.navbar.navbar-expand-lg.navbar-light.bg-info
      .container-fluid
        a.navbar-brand(href='/') Music Ection
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
              li.nav-item
                a.nav-link(href='/') Bosh sahifa
              if user
                li.nav-item
                  a.nav-link(href='/music/add') Musiqa qo'shish
        form.d-flex
          input.form-control.me-2(type='search' placeholder='Qidiruv' aria-label='Search')
          button.btn.btn-warning.me-3(type='submit') Qidirish
        ul.navbar-nav.nav.nav-right.mb-2.mb-lg-0
          if user
            li.nav-item
                a.btn.btn-light.me-3.nav-link(href='/Logout') Chiqish
            li.nav-item
                a.btn.btn-light.me-3.nav-link(href='/') #{user.username}
          else
            li.nav-item
                a.btn.btn-light.me-3.nav-link(href='/register') Ro'yxatdan o'tish
            li.nav-item
                a.btn.btn-light.me-3.nav-link(href='/login') Kirish
    .container
        != messages('message', locals)
        if errors 
          each error, i in errors 
            div(class='alert alert-danger') #{error.msg}
        block content
        hr
        footer 
            p Xizmatlar litsenziyalangan &copy; 
    script(src='https://code.jquery.com/jquery-3.6.0.slim.min.js' integrity='sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js' integrity='sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13' crossorigin='anonymous')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js")
    script(src="/javascript/index.js")
